<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mazaiting.mapper.ItemMapper">
	<select id="getItemList" resultType="Item">
		select * from items
	</select>
	
	<select id="getItemId" parameterType="int" resultType="Item">
		select * from items where id = #{id} 
	</select>
	
	<update id="updateItem" parameterType="Item">
		update items set name=#{name}, price=#{price}, detail=#{detail}, pic=#{pic} where id = #{id}
	</update>
</mapper>